{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch CheckNow Lab (XAMPP)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost/checknow-lab/",
            "webRoot": "${workspaceFolder}/ankur mishra ",
            "preLaunchTask": "Start XAMPP"
        },
        {
            "name": "Launch CheckNow Lab (PHP Server)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/ankur mishra ",
            "preLaunchTask": "Start PHP Server"
        },
        {
            "name": "Debug PHP",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/ankur mishra /index.php",
            "cwd": "${workspaceFolder}/ankur mishra  ",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}